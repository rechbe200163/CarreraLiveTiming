// prisma/prisma.schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model RaceData {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  carId Int
  lapTime DateTime
  bestLapTime DateTime
  laps Int
  racingMode Int // 0 = Race, 1 = Qualifying, Practice sessions will not be stored
}