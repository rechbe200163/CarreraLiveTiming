generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model RaceData {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  num   Int?
  laptime  Float
  sector1  Float
  sector2  Float
  race     Competition     @relation(fields: [raceId], references: [id])
  raceId   String   @db.ObjectId
}

model Competition {
  id        String       @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime     @default(now())
  title     String
  raceData  RaceData[]
}
