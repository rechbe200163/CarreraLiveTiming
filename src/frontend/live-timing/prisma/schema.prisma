generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model RaceDB {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  podium      Podium[]
}

model Podium {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  num           Int
  bestLap       Int
  time          Int
  laps          Int
  has_fastest_lap Boolean
  race          RaceDB   @relation(fields: [raceId], references: [id])
  raceId        String   @db.ObjectId @map("raceId")
}

model Controller {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  num           Int     @unique
  color         String
}
