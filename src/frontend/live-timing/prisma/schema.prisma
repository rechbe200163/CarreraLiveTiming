// prisma/prisma.schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model RaceDataDB {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  num              Int
  position         Int
  time             Int
  laptime          Int
  bestlap          Int
  laps             Int
  pits             Int
  fuel             Boolean
  pit              Boolean
  has_fastest_lap  Boolean  
}